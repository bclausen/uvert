							<% @menuitems.each do |key,val| %>
							<%= "<li class='" + is_active?(val.to_s) + "'><a href="+ val +">"+ key.to_s + "</a></li>" %>
							<% end %>
						</ul>
					</td>
				</tr>
			</table>

